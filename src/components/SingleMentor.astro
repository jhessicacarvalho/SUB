console.log(data);
---

<div>
  <div class="billede">
    <img src={`/mentor/${data.img}`} alt="mentor" />
    <h1>{data.name}</h1>
    <p>{data.rolle}</p>
  </div>
  <div class="bio">
    <img src="/svger/pin.svg" alt="pin" class="pin" />
    <div class="bioboks">
      <p>{data.bio}</p>
    </div>
  </div>
</div>

<style>
  .bioboks {
    padding-right: 2rem;
    padding-left: 2rem;
    width: 32rem;
    background: #fff;
    box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
    position: relative;
    padding-top: 4rem;
    padding-bottom: 2rem;
  }
  .bio {
    display: grid;
    justify-content: center;
  }
  .pin {
    justify-self: center;
    z-index: 1;
    position: absolute;
  }
</style>
