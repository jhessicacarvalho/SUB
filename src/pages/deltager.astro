  .grid1 {
    display: grid;
    grid-template-columns: 1fr 1fr;
  }

  .button-container {
    display: flex;
    justify-content: left; /* Centrerer horisontalt */
    align-items: center; /* Centrerer vertikalt */
    /* Får containeren til at fylde hele højden af viewporten */
  }

  .button {
    border: solid;
    border-color: black;
    background-color: rgba(255, 255, 255, 0.746);
    border-width: medium;
    border-radius: 12px;
    color: black;
    padding: 7px 12px;
    text-align: center;
    text-decoration: none;
    display: flex;
    font-size: 25px;
    margin-top: 40px;
    margin-bottom: 15px;
    cursor: pointer;
    font-family: Amiko-Bold;
  }

  #pink_baggrund {
    background-color: #f499b8;
    margin: 0%;
    position: relative;
    top: -35px;
    height: auto;
    z-index: 1;
  }

  .last_torn_paper {
    top: -50px;
    width: 100%;
    position: relative;
    rotate: 1deg;
  }
  /*polaroid*/

  figure {
    width: 244px;
    height: 292px;
    position: relative;
    background-color: #ffffff;
    padding: 19px 19px 55px 19px;
    box-shadow: 4px 8px 12px 0px rgba(0, 0, 0, 0.42);
    rotate: 10deg;

    /* Tilføj disse regler for at centrere figuren */
    margin: 0 auto; /* Centrer vandret */
    margin-top: 30px;
    margin-bottom: 40px;
    display: flex; /* Brug flexbox */
    flex-direction: column; /* Stak elementerne lodret */
    justify-content: center; /* Centrer indholdet lodret */
    align-items: center; /* Centrer indholdet vandret */
  }
  figure img {
    width: 100%;
  }
  figcaption {
    font-size: 25px;
    text-align: center;
    color: #2c2c2c;
  }
  figure .tape {
    position: absolute;
    width: 13%; /* Adjust size as needed */
    height: 36%; /* Adjust size as needed */
  }

  .tape-top-left {
    top: -39px;
    left: 5px;
    transform: rotate(40deg);
  }

  .tape-bottom-right {
    bottom: -35px;
    right: -1px;
    transform: rotate(40deg);
  }
  .caret {
    border-top: 10px solid rgb(0, 0, 0);
    border-left: 7px solid transparent;
    border-right: 7px solid transparent;
    display: inline-block;
    margin-left: 10px;
    margin-top: 10px;
    vertical-align: middle;
  }

  /* galleri*/
  .image_wrapper {
    position: relative;
    overflow: hidden;
  }

  .image_wrapper > img {
    display: block;
    width: 100%; /*gør at billederne udfylder hele deres grid*/
    aspect-ratio: 1/1; /* gør at billederne bliver retankler*/
    object-fit: cover; /*gør at alle billeder fylder lige meget*/
    object-position: center;
  }
  .forsvind {
    display: none;
  }

  .image_wrapper > .content {
    position: absolute;
    inset: 0;
    font-size: 2rem;
    background: rgba(244, 153, 184, 60%);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    opacity: 0;
  }

  .image_wrapper > .content,
  .image_wrapper > img {
    transition: 300ms ease-in-out;
  }

  .image_wrapper:hover > .content.fade {
    opacity: 1;
  }

  h2 {
    font-size: 1.2em;
  }

  @media (min-width: 769px) {
    .grid1 {
      grid-template-columns: 1fr 1fr 1fr 1fr 1fr;
    }
    .top_grid {
      display: grid;
      grid-template-columns: 2fr 1fr;
      margin-top: 50px;
    }
    .top_grid figure {
      order: 2; /* Set order for the figure */
    }

    .top_grid iframe {
      order: 1; /* Set order for the iframe */
    }
    .margin {
      margin-top: 2em;
      margin-left: 10em;
      margin-right: 10em;
    }
    figure {
