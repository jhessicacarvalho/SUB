<style>
  figure {
    width: 336px;
    height: 403px;
    position: relative;
    background-color: #ffffff;
    padding: 19px 19px 110px 19px;
    box-shadow: 4px 8px 12px 0px rgba(0, 0, 0, 0.42);
    rotate: 10deg;
  }
  figure img {
    width: 100%;
  }
  figcaption {
    font-size: 25px;
    text-align: center;
    color: #2c2c2c;
  }
  figure:before,
  figure:after {
    content: "";
    position: absolute;
    height: 50px;
    width: 180px;
    background-color: rgba(102, 102, 102, 0.6);
    transform: rotate(-40deg);
  }
  figure:before {
    top: 3px;
    left: -55px;
  }
  figure:after {
    bottom: 3px;
    right: -60px;
  }

  /* galleri*/
  .grid1 {
    display: grid;
    grid-template-columns: 1fr 1fr;
  }

  .image_wrapper {
    position: relative;
    overflow: hidden;
  }

  .image_wrapper > img {
    display: block;
    width: 100%; /*gør at billederne udfylder hele deres grid*/
    aspect-ratio: 1/1; /* gør at billederne bliver retankler*/
    object-fit: cover; /*gør at alle billeder fylder lige meget*/
    object-position: center;
  }

  .image_wrapper > .content {
    position: absolute;
    inset: 0;
    font-size: 2rem;
    background: rgba(244, 153, 184, 60%);
    display: flex;
    justify-content: center;
    align-items: center;
    opacity: 0;
  }

  .image_wrapper > .content,
  .image_wrapper > img {
    transition: 200ms ease-in-out;
  }

  .image_wrapper > .content.fade {
    opacity: 0;
  }

  .image_wrapper:hover > .content.fade {
    opacity: 1;
  }
</style>
