    right: -4.8em;
    transform: rotate(0deg);
    scale: 0.3;
  }

  .white-box4{
    position: relative;
    background-color: white;
    color: black;
    padding-top: 1.5em;
    padding-right: 2em;
    padding-left: 2em;
    padding-bottom: 0.2em;
    transform: rotate(-3deg);
