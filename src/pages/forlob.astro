    transform: rotate(100deg);
    scale: 0.3;
  }


  .container{
    display: grid;
    grid-template-columns: 1fr;
  }
  .green-box{
    background-color: var(--green);
    color: white;
     box-sizing: border-box;
    width: 100vw;
    padding: 2em;
    margin-right: 2.5em;
    margin-left: 2.5em;
    align-content: center;
  }

  .green-box p{
    margin-bottom: 0;
    font-family: Amiko-Bold;
  }

  .green-box li{
    margin-left: 0.5em;
    margin-bottom: 0.2em;
  }

  .green-box ol{
    margin-bottom: 1em;
  }

   .green-box ul li{
    margin-left: 1em;
  }

  .studioIMG{
    width: 100vw;
    height: auto;
     margin-right: 2.5em;
    margin-left: 2.5em;
    scale: 0.8;
    margin-top: -2.5em;
  }

</style>
