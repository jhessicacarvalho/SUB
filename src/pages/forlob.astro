</MainLayout>

<style>
  .margin {
    margin-right: 1.2em;
    margin-left: 1.2em;
  }

  .topIMG {
    width: 100%;
    height: auto;
  }

  /*---------- GRØN POST-IT BOKS ----------*/
  .post-it-green {
    display: flex;
    flex-direction: column;
    background-color: var(--green);
    color: white;
    padding: 2.5em;
    padding-bottom: 1em;
    position: relative;
    margin: 2.5em;
    box-shadow: 0em 0.4em var(--shadow);
    transform: rotate(2deg);
  }

  .tape {
    position: absolute;
    width: 3em;
    height: auto;
  }

  .tape1 {
    top: -0.9em;
    left: -1em;
    transform: rotate(100deg);
  }

  .tape2 {
    top: -1em;
    right: -1em;
    transform: rotate(-10deg);
  }

  .post-it-green ol {
    margin-left: 1.2em;
  }

  .post-it-green ol li {
    font-family: Amiko-Regular;
    font-size: 0.9em;
    line-height: 1.5em;
    margin-bottom: 1em;
  }

  /*---------- PINK BAGGRUND FORLØBETS INDHOLD ----------*/

  .pink-container {
    display: grid;
    grid-template-columns: 1fr;
    position: relative;
    row-gap: 2em;
    padding-top: 8em;
  }
  
  .pink-container img.pink-img {
    position: absolute;
    width: 100%;
    height: auto;
    z-index: -1;
  }

  .pink-container h2 {
    color: white;
    text-align: center;
  }

  .white-box {
    background-color: white;
    text-align: center;
    padding: 2em 3.1em 0.5em 3.1em;
    width: fit-content;
    transform: rotate(2deg);
    box-shadow: 0em 0.3em var(--shadow);
    position: relative;
    z-index: 1;
    margin: 0 auto;
  }

  .white-box3 {
    padding: 1.6em 2em 0.5em 1.6em;
  }

  .tape3 {
    top: -0.8em;
    left: -1em;
    transform: rotate(100deg);
  }

  .tape4 {
    top: -1em;
    right: -0.8em;
    transform: rotate(-10deg);
  }

  .tape5 {
    top: 5em;
    left: -1em;
    transform: rotate(0deg);
  }

  .tape6 {
    top: -1em;
    right: -0.8em;
    transform: rotate(-10deg);
  }

  .tape7 {
    top: -0.8em;
    left: -1em;
    transform: rotate(100deg);
  }

  .tape8 {
    top: -1em;
    right: -0.8em;
    transform: rotate(-10deg);
  }

  .tape9 {
    top: -1em;
    right: 10em;
    transform: rotate(100deg);
  }

  .tape10 {
    top: 5.5em;
    left: 9.5em;
    transform: rotate(100deg);
  }

  /*---------- GRØN BOKS M. BILLEDE ----------*/

  .container {
    display: grid;
    grid-template-columns: 1fr;
  }

  .green-box {
    background: var(--green);
    margin-right: 2em;
    margin-left: 2em;
    padding: 2em;
    color: white;
  }

