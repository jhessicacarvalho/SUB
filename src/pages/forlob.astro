<style>

  .margin{
     margin-right: 1.2em;
    margin-left: 1.2em;
  }
  
  .topIMG{
    width: 100%;
    height: auto;
  }
  
  .post-it-green {
    position: relative;
    background-color: var(--green);
    color: white;
    padding: 2.5em;
    padding-bottom: 1em;
    transform: rotate(3deg);
    width: fit-content;
    margin: 2.5em;
  }

  .tape {
    position: absolute;
    width: 50px;
    height: auto;
  }

  .tape1 {
    top: -1em;
    left: -1em;
    transform: rotate(100deg);
  }

  .tape2 {
    top: -0.8em;
    right: -1em;
    transform: rotate(0deg);
  }

  ol{
    font-family: Amiko-Regular;
    font-size: 0.9em;
    line-height: 1.5em;
    font-style: normal;
    padding-left: 1.2em;
  }

  li{
    margin-bottom: 1em;
  }

  .pink-background img{
    width: 100%;
    height: auto;
    position: absolute;
  }

  .inside{
    position: relative;
    color: white;
    top: 8em;
    text-align: center;
  }

  .white-box1{
    position: relative;
    background-color: white;
    color: black;
     padding-top: 1.5em;
    padding-right: 2em;
    padding-left: 2em;
    padding-bottom: 0.2em;
    transform: rotate(3deg);
    width: fit-content;
    top: 10em;
    left: 7em;
    text-align: center;
    box-shadow: 0em 0.2em var(--shadow);
  }

   .tape3 {
    top: -4.7em;
    left: -4.2em;
    transform: rotate(100deg);
    scale: 0.3;
  }

  .tape4 {
    top: -4.4em;
    right: -4.4em;
    transform: rotate(0deg);
    scale: 0.3;
  }

  .white-box2 {
    position: relative;
    background-color: white;
    color: black;
     padding-top: 1.5em;
    padding-right: 2.2em;
    padding-left: 2.2em;
    padding-bottom: 0.2em;
    transform: rotate(-3deg);
    width: fit-content;
    top: 13em;
    left: 7em;
    text-align: center;
    box-shadow: 0em 0.2em var(--shadow);
  }

   .tape5 {
    top: 1.3em;
    left: -4.2em;
    transform: rotate(0deg);
    scale: 0.3;
  }

  .tape6 {
    top: -4.2em;
    right: -4.3em;
    transform: rotate(0deg);
    scale: 0.3;
  }

  .white-box3{
    position: relative;
    background-color: white;
    color: black;
    padding-top: 1.5em;
    padding-right: 1.2em;
    padding-left: 1.2em;
    padding-bottom: 0.2em;
    transform: rotate(3deg);
    width: fit-content;
    top: 16.5em;
    left: 7em;
    text-align: center;
    box-shadow: 0em 0.2em var(--shadow);
  }

   .tape7 {
    top: -5em;
    left: -4.7em;
    transform: rotate(100deg);
    scale: 0.3;
  }

  .tape8 {
